---
import Badge from "@/components/starwind/badge";
import { getTexts } from "@/utils/i18n";
const texts = getTexts(Astro);
---

<div
	class="bg-neutral-secondary-soft border dark:border-gray-200 border-blue-900 rounded-2xl p-8 md:p-12"
>
	<Badge variant="info"> {texts.company.current_company} </Badge>

	<h2 class="text-heading text-3xl font-semobild my-4">{texts.company.name}</h2>
	<p class="font-normal text-body mb-4">
		{texts.company.description}
	</p>
	<a
		href="https://www.linkedin.com/company/alsoftpro-s-r-l/"
		target="_blank"
		class="text-fg-brand hover:underline font-medium text-lg inline-flex items-center"
		>{texts.social.linkedin}
		<svg
			class="w-6 h-6 rtl:rotate-180 ms-1.5"
			aria-hidden="true"
			xmlns="http://www.w3.org/2000/svg"
			width="24"
			height="24"
			fill="none"
			viewBox="0 0 24 24"
			><path
				stroke="currentColor"
				stroke-linecap="round"
				stroke-linejoin="round"
				stroke-width="2"
				d="M19 12H5m14 0-4 4m4-4-4-4"></path></svg
		>
	</a>
</div>
