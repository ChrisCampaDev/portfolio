---
import { exp } from "@/content/experience";
import { getTexts } from "@/utils/i18n";

const timelineData = exp;
const texts = getTexts(Astro);
---

<div class="w-full max-w-6xl mx-auto px-4">
	<h5 class="text-2xl font-bold text-center p-6">{texts.experience.title}</h5>
	<div class="relative">
		{
			timelineData.map(item => (
				<div class="relative pb-12">
					<div class="p-6 bg-neutral/40 dark:bg-black/40 border  dark:border-gray-200 border-blue-900 rounded-lg shadow-sm hover:shadow-lg transition-shadow duration-300 ease-in-out">
						<time class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">
							{item.date}
						</time>
						<h2 class="text-2xl font-bold text-gray-900 dark:text-white mt-1">
							{item.company}
						</h2>
						<p class="mt-3 text-base text-gray-600 dark:text-gray-300">
							{item.description}
						</p>

						{item.projects && item.projects.length > 0 && (
							<div class="mt-6">
								<h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200">
									{texts.timeline.projects_title}
								</h3>
								<ul class="mt-3 flex flex-col gap-4">
									{item.projects.map(project => (
										<li class="bg-gray-50 dark:bg-gray-700/50 border-l-4 border-blue-500 p-4 rounded-r-md">
											<h4 class="font-bold text-gray-800 dark:text-gray-100">
												{project.title}
											</h4>
											<p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
												{project.description}
											</p>
										</li>
									))}
								</ul>
							</div>
						)}
					</div>
				</div>
			))
		}
	</div>
</div>
