---
import Image from "astro/components/Image.astro";
import Form from "./Form.astro";

const date = new Date();
const avatar = "/public/199186040.jpeg";
---

<footer
	class="bg-neutral-primary-soft rounded-t-2xl shadow-xs border border-t-blue-900 text-center py-6 mt-6"
>
	<div class="flex justify-evenly items-center">
		<div class="flex gap-4">
			<Image
				src={avatar}
				alt={"Avatar"}
				width={150}
				height={150}
				class="rounded-full"
			/>
			<div class="flex flex-col items-start justify-center gap-8">
				<span class="text-sm text-body sm:text-center">
					<a href="https://github.com/ChrisCampaDev" class="hover:underline"
						>ChrisCampaDev-{date.getFullYear().toString()}</a
					>
				</span>
				<span>
					Fondo de:
					<a
						href="https://codepen.io/riley-pearce/pen/OJWPjZM"
						class="hover:underline">riley-pearce-CodePen</a
					>
				</span>
			</div>
		</div>
		<div>
			<Form />
		</div>
	</div>
</footer>
