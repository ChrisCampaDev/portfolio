---
import { Image } from "astro:assets";
import { getTexts } from "@/utils/i18n";
const date = new Date();
const texts = getTexts(Astro);
---

<footer
	class="bg-neutral-primary-soft rounded-t-2xl shadow-xs border border-t-blue-900 text-center py-6 mt-6"
>
	<div class="flex justify-evenly items-center">
		<div class="flex gap-4">
			<Image
				src="/public/199186040.jpeg"
				alt={"Avatar"}
				width={150}
				height={150}
				class="rounded-full"
			/>
			<div class="flex flex-col items-start justify-center gap-8">
				<span class="text-sm text-body sm:text-center">
					{texts.footer.developed_by}
					<a
						href="https://github.com/ChrisCampaDev"
						class="hover:underline"
						target="_blank">ChrisCampaDev-{date.getFullYear().toString()}</a
					>
				</span>
				<span>
					{texts.footer.background_by}
					<a
						href="https://codepen.io/riley-pearce/pen/OJWPjZM"
						target="_blank"
						class="hover:underline">riley-pearce-CodePen</a
					>
				</span>
			</div>
		</div>
		<div>
			<p>
				{texts.footer.tech_stack} <span
					class="hover:text-orange-400 font-bold hover:underline"
					><a href="https://astro.build/" target="_blank">Astrojs</a></span
				>{texts.footer.component_lib}<span
					class="hover:text-gray-400
						font-bold
						hover:underline"
				>
					<a href="https://starwind.dev/" target="_blank">Starwind UI </a>
				</span>
			</p>
		</div>
	</div>
</footer>
