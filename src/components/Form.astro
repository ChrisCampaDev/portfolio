---
import {
	Tabs,
	TabsList,
	TabsTrigger,
	TabsContent,
} from "@/components/starwind/tabs";
import EmailSendForm from "./sections/Sends/EmailSendForm.astro";
import WhatsappSendForm from "./sections/Sends/WhatsappSendForm.astro";
---

<Tabs defaultValue="email" class="max-w-4xl">
	<TabsList>
		<TabsTrigger value="email" class="px-2 w-52">Email</TabsTrigger>
		<TabsTrigger value="whatsapp" class="px-2 w-52">Whatsapp</TabsTrigger>
	</TabsList>
	<TabsContent value="email">
		<EmailSendForm />
	</TabsContent>
	<TabsContent value="whatsapp"> <WhatsappSendForm /> </TabsContent>
</Tabs>
