---
import Navbar from "./Navbar.astro";
import ProfileImage from "./ui/ProfileImage.astro";
import SocialLinks from "./ui/SocialLinks.astro";
import TechStack from "./ui/TechStack.astro";
---

<div class="min-h-screen flex flex-col">
    <Navbar />

    <div class="flex-1 flex items-center justify-center px-6 py-12">
        <div class="max-w-6xl mx-auto grid lg:grid-cols-2 gap-12 items-center">

            <!-- Profile Image Section -->
            <div class="flex justify-center lg:justify-start order-2 lg:order-1">
                <ProfileImage
                    src="/portfolio/profile.jpeg"
                    alt="Christian Campa - Desarrollador Frontend"
                />
            </div>

            <!-- Content Section -->
            <div class="text-center lg:text-left order-1 lg:order-2">
                <div class="mb-8">
                    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
                        Hola, soy <br>
                        <span class="text-blue-400 font-extrabold">Christian Campa</span>
                    </h1>

                    <div class="prose prose-lg max-w-none">
                        <p class="text-white text-xl md:text-2xl mb-6 leading-relaxed">
                            <span class="text-blue-400 font-bold">Desarrollador Frontend</span>
                            apasionado por crear experiencias web excepcionales.
                        </p>

                        <p class="text-gray-300 text-lg mb-8 leading-relaxed">
                            Actualmente trabajo en la <span class="text-blue-400 font-bold">Compañía Alsoftpro</span>. He trabajado en diversos proyectos,
                            estando vinculado a diferentes empresas dedicadas al desarrollo web.
                            Me especializo en crear interfaces modernas y funcionales.
                        </p>
                    </div>

                    <!-- Call to Action Button -->
                    <div class="mb-8 flex gap-5 justify-center items-center">
                        <a
                            href="#proyectos"
                            class="inline-flex items-center px-8 py-4 bg-blue-400 text-black font-semibold rounded-full hover:bg-blue-300 transition-colors duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
                        >
                            Ver mis proyectos
                            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </a>
                        <button type="button" class="bg-blue-500 text-white hover:bg-blue-600 rounded-full px-8 py-4">Descargar CV</button>
                    </div>
                </div>

                <!-- Social Links -->
                <div class="mb-12">
                    <h3 class="text-white text-lg font-semibold mb-4 text-center lg:text-left">
                        Conecta conmigo
                    </h3>
                    <SocialLinks
                        githubUrl="https://github.com/ChrisCampaDev"
                        linkedinUrl="https://www.linkedin.com/in/christian-campa-su%C3%A1rez-40551b268/"
                        whatsappUrl="https://wa.me/+5354758835"
                        class="justify-center lg:justify-start"
                    />
                </div>
            </div>
        </div>
    </div>

    <!-- Tech Stack Section -->
    <div class="px-6 pb-12">
        <TechStack />
    </div>
</div>

<style>
    /* Custom animations */
    @keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
    }

    .animate-float {
        animation: float 3s ease-in-out infinite;
    }

    /* Gradient background for the entire hero */
    .min-h-screen {
        position: relative;
    }

    .min-h-screen::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: radial-gradient(circle at 50% 50%, rgba(250, 204, 21, 0.1) 0%, transparent 50%);
        pointer-events: none;
    }
</style>
