---

interface Props {
	title: string;
	description: string;
	link: string | undefined;
	stack: string[];
}
const { title, link, description, stack } = Astro.props;
---

<div class="relative items-center bg-blue-200 border border-gray-800    rounded-2xl shadow-sm h-[350px] md:flex-row md:max-w-xl hover:bg-blue-300 shrink dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 transition-colors duration-300">
    <div class="flex flex-col justify-between p-4 leading-normal">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 text-center dark:text-white">{title}</h5>
        <hr />
        <p class="mb-3 prose font-normal text-gray-900 dark:text-gray-400">{description}</p>
        <ul class="text-gray-900 flex gap-6 justify-center">
            {stack.map((s)=>(
            <li class="bg-blue-900 text-white py-2 px-4 rounded-3xl">{s}</li>
            ))}
        </ul>
    </div>

    {link && (
        <a href={link} target="_blank" rel="noopener noreferrer" class="flex justify-center items-center text-center text-xl" >
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-2xl">Visitar Sitio Web</button>
        </a>
    )}
</div>
