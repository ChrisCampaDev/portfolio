---

interface Props {
	title: string;
	description: string;
	link: string | undefined;
	stack: string[];
}
const { title, link, description, stack } = Astro.props;
---

<div class="relative items-center bg-blue-400 border border-gray-800 rounded-2xl shadow-sm md:flex-row md:max-w-xl hover:bg-blue-300 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
    <div class="flex flex-col justify-between p-4 leading-normal">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 text-center dark:text-white">{title}</h5>
        <p class="mb-3 prose font-normal text-gray-900 dark:text-gray-400">{description}</p>
    </div>
    {link && (
        <a href={link} target="_blank" class="flex justify-center items-center text-center text-xl p-4 text-white" >
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Visitar Sitio Web</button>
        </a>
    )}
</div>
