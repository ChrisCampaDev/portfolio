---
interface Props {
	src?: string;
	alt?: string;
	class?: string;
}

const {
	src = "/profile.jpg",
	alt = "Christian Campa - Desarrollador Frontend",
	class: className = "",
} = Astro.props;
---

<div class={`relative ${className}`}>
	<div class="size-90 rounded-full overflow-hidden border-4 border-blue-400 shadow-2xl bg-gray-800">
			<img
				src={src}
				alt={alt}
				class="w-full h-full object-cover"
				loading="eager"
			/>
	</div>
	<!-- Decorative elements -->
	<div class="absolute -top-4 -right-4 w-8 h-8 bg-blue-200 rounded-full animate-pulse"></div>
	<div class="absolute -bottom-4 -left-4 w-6 h-6 bg-white rounded-full animate-pulse delay-1000"></div>
</div>
