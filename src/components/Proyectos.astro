---
import { getCollection } from "astro:content";
import Card from "./ui/Project.astro";

const works = await getCollection("projects");
---

<div id="proyectos" class="text-white">
    <h1 class="text-center text-2xl">Proyectos</h1>
    <div class="text-white grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 p-4 gap-8">
        {works.map((project) => (
            <Card
            title={project.data.Name}
            description={project.data.Description}
            link={project.data.Web}
            stack={project.data.DevTools}
            />
        ))}
    </div>
</div>
