---
import { getCollection } from "astro:content";
import Work from "./ui/Work.astro";

const experiences = await getCollection("works");
---
<h4 class="text-white text-center px-5 py-2 text-2xl">Experiencia Laboral</h4>
    <div class="p-7 text-2xl flex justify-center items-center m-auto gap-5 w-1/2">
        <ol class="relative border-s border-gray-200 dark:border-gray-700">
            {experiences.map((work) => (
             <Work
                time={work.data.Date}
                company={work.data.Company}
                description={work.data.Description}
                stack={work.data.Role}
             />
            ))}
        </ol>
</div>
